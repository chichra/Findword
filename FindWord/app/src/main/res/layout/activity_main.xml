<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="shruti.agarwal.org.iotapp.wordnik"
    android:id="@+id/ed">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/getword"
        android:layout_marginBottom="315dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="type here" />

    <Button
        android:text="example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/example"
        android:elevation="24dp"
        android:layout_marginBottom="51dp"
        android:layout_above="@+id/meaning"
        android:layout_alignLeft="@+id/meaning"
        android:layout_alignStart="@+id/meaning" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toggle your home appliances ON/OFF "
        android:id="@+id/textView4"
        android:textSize="18dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="meaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meaning"
        android:elevation="24dp"

        android:layout_above="@+id/textView4"
        android:layout_marginBottom="14dp"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <Button
        android:text="add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add"
        android:elevation="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <Button
        android:text="pronounciation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pronounciation"
        android:elevation="24dp"
        android:layout_below="@+id/add"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:layout_alignRight="@+id/add"
        android:layout_alignEnd="@+id/add" />

    <Button
        android:text="get info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getinfo"
        android:elevation="24dp"
        android:layout_alignTop="@+id/example"
        android:layout_alignRight="@+id/antonyms"
        android:layout_alignEnd="@+id/antonyms"
        android:layout_marginTop="11dp" />

    <Button
        android:text="synonyms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/synonyms"
        android:elevation="24dp"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/example"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/pronounciation"
        android:layout_alignEnd="@+id/pronounciation" />

    <Button
        android:text="antonyms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/antonyms"
        android:elevation="24dp"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp"
        android:layout_alignBottom="@+id/meaning"
        android:layout_toRightOf="@+id/meaning"
        android:layout_toEndOf="@+id/meaning"
        android:layout_marginBottom="17dp" />

    />



</RelativeLayout>
